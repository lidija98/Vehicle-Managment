@model VehicleModelViewModel

<h2>Edit Vehicle Model</h2>

@using (Html.BeginForm("Edit", "VehicleModel", new { id = Model.Id }, FormMethod.Post, false, new { @class = "edit-form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Abrv)
        @Html.TextBoxFor(model => model.Abrv, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Abrv)
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
}
