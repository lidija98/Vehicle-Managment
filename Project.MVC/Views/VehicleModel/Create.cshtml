@model Project.MVC.Models.VehicleModelViewModel

<h2>Create Vehicle Model</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-group">
    <label asp-for="MakeId" class="control-label">Make</label>
    <select asp-for="SelectedMakeId" class="form-control" asp-items="Model.AvailableMakes"></select>

    <span asp-validation-for="MakeId" class="text-danger"></span>
</div>


    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Abrv)
        @Html.TextBoxFor(m => m.Abrv, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Abrv)
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
}

