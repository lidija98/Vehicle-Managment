@model Project.MVC.Models.VehicleMakeViewModel

<h2>Delete</h2>

<p>Are you sure you want to delete the following vehicle make?</p>

<div>
    <h4>Vehicle Make Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Abbreviation</dt>
        <dd class="col-sm-10">@Model.Abrv</dd>
    </dl>
</div>

<form method="post" action="@Url.Action("DeleteConfirmed", "Make", new { id = Model.Id })">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</form>

